<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="1dp"
    android:layout_margin="2dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/entryPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/entryPhoto"
            android:layout_toRightOf="@id/entryPhoto"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entryName"
                style="@style/Entry.Margin"
                tools:text="홍길동" />

            <TextView
                style="@style/Entry"
                android:text=", " />

            <TextView
                android:id="@+id/entryAge"
                style="@style/Entry"
                tools:text="나이" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_toEndOf="@id/entryPhoto"
            android:layout_toRightOf="@id/entryPhoto"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entryResidence"
                style="@style/Entry.Margin"
                tools:text="실제 거주지" />

            <TextView
                style="@style/Entry"
                android:text=", " />

            <TextView
                android:id="@+id/entryJob"
                style="@style/Entry"
                tools:text="직업" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_toEndOf="@id/entryPhoto"
            android:layout_toRightOf="@id/entryPhoto"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entryHobby"
                style="@style/Entry.Margin"
                tools:text="취미" />

            <TextView
                style="@style/Entry"
                android:text=", " />

            <TextView
                android:id="@+id/entryContacts"
                style="@style/Entry"
                tools:text="연락처" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
