<?xml version="1.0" encoding="utf-8"?>
<!--about login page-->
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--TODO: Add Confirm Image -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/infoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/infoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="user photo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Name"/>

            <TextView
                android:id="@+id/infoName"
                style="@style/ContactContent"
                tools:text="Name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Gender"/>

            <TextView
                android:id="@+id/infoGender"
                style="@style/ContactContent"
                tools:text="Gender"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Age"/>

            <TextView
                android:id="@+id/infoAge"
                style="@style/ContactContent"
                tools:text="22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Phone Number"/>

            <TextView
                android:id="@+id/infoContact"
                style="@style/ContactContent"
                tools:text="010-XXXX-XXXX"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Residence"/>

            <TextView
                android:id="@+id/infoResidence"
                style="@style/ContactContent"
                tools:text="Residence"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Job"/>

            <TextView
                android:id="@+id/infoJob"
                style="@style/ContactContent"
                tools:text="Job"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Hobby"/>

            <TextView
                android:id="@+id/infoHobby"
                style="@style/ContactContent"
                tools:text="Hobby"/>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>