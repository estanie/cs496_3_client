<?xml version="1.0" encoding="utf-8"?>
<!--about login page-->
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/infoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="15sp"
        android:src="@mipmap/edit_button"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="15sp"
        android:src="@mipmap/logout_button"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15sp"
        android:elevation="0dp"
        android:padding="1dp"
        android:scaleType="matrix"
        android:src="@mipmap/ic_launcher_round"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="0dp"
        app:fabSize="normal"
        app:maxImageSize="39dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/infoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="user photo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Name"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoName"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Gender"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoGender"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="Gender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Age"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoAge"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Phone Number"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoContact"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="010-XXXX-XXXX" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Residence"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoResidence"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="Residence" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Job"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoJob"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="Job" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/ContactTitle"
                android:text="Hobby"
                app:fontFamily="@font/mf_time_traveler" />

            <TextView
                android:id="@+id/infoHobby"
                style="@style/ContactContent"
                app:fontFamily="@font/mf_time_traveler"
                tools:text="Hobby" />
        </LinearLayout>
        </LinearLayout>
</android.support.design.widget.CoordinatorLayout>